<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/gray_100"
    tools:context="id.go.jabarprov.dbmpr.temanjabar.map.presentation.fragments.MapFragment">

    <com.esri.arcgisruntime.mapping.view.MapView
        android:id="@+id/mv_arcgis"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/button_back"
        style="@style/Style.Button.UnelevatedButton.Circle.Icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:elevation="8dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        app:icon="@drawable/ic_chevron_left"
        app:iconTint="@color/black" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet"
        style="@style/Widget.BottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_behavior="@string/bottom_sheet_behavior">


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>