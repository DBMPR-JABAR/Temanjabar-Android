<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.NewsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?actionBarSize">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_400"
            app:contentScrim="@color/white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/image_view_news_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/button_back"
                        style="@style/Style.Button.UnelevatedButton.Circle.Icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:backgroundTint="@color/white"
                        android:foreground="?selectableItemBackgroundBorderless"
                        app:icon="@drawable/ic_chevron_left"
                        app:iconTint="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_frame_layout_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:shimmer_auto_start="true"
                tools:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <include
                        layout="@layout/layout_placeholder_text_title"
                        android:layout_width="200dp"
                        android:layout_height="@dimen/placeholder_text_subtitle_height" />

                    <include
                        layout="@layout/layout_placeholder_text_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_title_height"
                        android:layout_marginTop="16dp" />

                    <include
                        layout="@layout/layout_placeholder_text_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_title_height"
                        android:layout_marginTop="8dp" />

                    <include
                        layout="@layout/layout_placeholder_text_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_body_height"
                        android:layout_marginTop="16dp" />

                    <include
                        layout="@layout/layout_placeholder_text_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_body_height"
                        android:layout_marginTop="8dp" />

                    <include
                        layout="@layout/layout_placeholder_text_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_body_height"
                        android:layout_marginTop="8dp" />

                    <include
                        layout="@layout/layout_placeholder_text_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_body_height"
                        android:layout_marginTop="8dp" />

                    <include
                        layout="@layout/layout_placeholder_text_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_body_height"
                        android:layout_marginTop="8dp" />

                    <include
                        layout="@layout/layout_placeholder_text_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_body_height"
                        android:layout_marginTop="8dp" />

                    <include
                        layout="@layout/layout_placeholder_text_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_body_height"
                        android:layout_marginTop="8dp" />

                    <include
                        layout="@layout/layout_placeholder_text_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_body_height"
                        android:layout_marginTop="8dp" />

                    <include
                        layout="@layout/layout_placeholder_text_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_body_height"
                        android:layout_marginTop="8dp" />

                    <include
                        layout="@layout/layout_placeholder_text_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_body_height"
                        android:layout_marginTop="8dp" />

                    <include
                        layout="@layout/layout_placeholder_text_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_body_height"
                        android:layout_marginTop="8dp" />

                    <include
                        layout="@layout/layout_placeholder_text_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_body_height"
                        android:layout_marginTop="8dp" />

                    <include
                        layout="@layout/layout_placeholder_text_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_body_height"
                        android:layout_marginTop="8dp" />

                    <include
                        layout="@layout/layout_placeholder_text_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_body_height"
                        android:layout_marginTop="8dp" />

                    <include
                        layout="@layout/layout_placeholder_text_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_body_height"
                        android:layout_marginTop="8dp" />

                    <include
                        layout="@layout/layout_placeholder_text_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_body_height"
                        android:layout_marginTop="8dp" />

                    <include
                        layout="@layout/layout_placeholder_text_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_body_height"
                        android:layout_marginTop="8dp" />

                    <include
                        layout="@layout/layout_placeholder_text_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_body_height"
                        android:layout_marginTop="8dp" />

                    <include
                        layout="@layout/layout_placeholder_text_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_body_height"
                        android:layout_marginTop="8dp" />

                    <include
                        layout="@layout/layout_placeholder_text_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_body_height"
                        android:layout_marginTop="8dp" />

                    <include
                        layout="@layout/layout_placeholder_text_title"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/placeholder_text_body_height"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text_view_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?textAppearanceSubtitle2"
                    tools:text="Uji Coba Aplikasi SapuLobang Rabu, 23 Maret 2022" />

                <TextView
                    android:id="@+id/text_view_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textAppearance="?textAppearanceHeadline6"
                    android:textFontWeight="700"
                    tools:text="Aplikasi Sapu Lobang" />

                <WebView
                    android:id="@+id/webview_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="56dp"
                    android:nestedScrollingEnabled="true"
                    android:scrollbars="none" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>