<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Temanjabar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_600</item>
        <item name="colorPrimaryVariant">@color/green_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_400</item>
        <item name="colorSecondaryVariant">@color/yellow_600</item>
        <item name="colorOnSecondary">@color/white</item>
        <!--  Tertiary brand color. -->
        <item name="colorTertiary">@color/blue_600</item>
        <item name="colorTertiaryVariant">@color/blue_800</item>
        <item name="colorOnTertiary">@color/white</item>
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.TemanJabar.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.TemanJabar.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.TemanJabar.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.TemanJabar.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.TemanJabar.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.TemanJabar.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.TemanJabar.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.TemanJabar.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.TemanJabar.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.TemanJabar.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.TemanJabar.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.TemanJabar.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.TemanJabar.Overline</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="colorError">@color/red_700</item>
        <item name="colorWarning">@color/yellow_700</item>
        <item name="colorInfo">@color/blue_700</item>
        <item name="colorActive">@color/green_700</item>
        <item name="headerTextColor">@color/gray_900</item>
        <item name="bodyTextColor">@color/gray_800</item>
        <item name="disabledTextColor">@color/gray_600</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="fontFamily">@font/lato</item>
    </style>
</resources>