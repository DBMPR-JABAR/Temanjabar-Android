<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:background="@drawable/bg_circle_active"
        android:padding="8dp"
        app:tint="@color/white"
        android:id="@+id/image_view_status"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_paper_plane"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:text="12 May 2022, 17:00 WIB"
        android:textAppearance="?textAppearanceBody2"
        android:textColor="@color/gray_600"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/image_view_status"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Laporan berhasil dikirimkan"
        android:textAppearance="?textAppearanceBody2"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/image_view_status"
        app:layout_constraintTop_toBottomOf="@id/text_view_date" />

</androidx.constraintlayout.widget.ConstraintLayout>