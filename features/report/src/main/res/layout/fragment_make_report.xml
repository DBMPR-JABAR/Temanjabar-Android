<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.MakeReportFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:contentInsetStart="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_back"
                    style="@style/Style.Button.UnelevatedButton.Circle.Icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:backgroundTint="@color/white"
                    app:icon="@drawable/ic_chevron_left"
                    app:iconTint="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_view_page_title"
                    style="@style/Style.Text.Page.Header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Buat Laporan"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@id/button_back"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_100"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:weightSum="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider">

        <!--    Barrier Step Icon    -->
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_icon_step_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:barrierDirection="top"
            app:constraint_referenced_ids="image_view_category" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_icon_step_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="image_view_category" />
        <!--    End Barrier Step Icon    -->

        <!--    Step Privasi Laporan   -->
        <ImageView
            android:id="@+id/image_view_privacy"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_circle_step"
            android:padding="8dp"
            android:src="@drawable/ic_lock"
            app:layout_constraintEnd_toStartOf="@id/guideline_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/color_tint_icon" />

        <TextView
            android:id="@+id/text_view_step_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Privasi\nLaporan"
            android:textAppearance="?textAppearanceBody2"
            android:textColor="@color/color_text_step"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/guideline_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrier_icon_step_bottom" />
        <!--    End Step Privasi Laporan    -->

        <View
            android:id="@+id/step_bar_1"
            android:layout_width="0dp"
            android:layout_height="2.5dp"
            android:layout_margin="8dp"
            android:background="@drawable/step_bar"
            app:layout_constraintBottom_toBottomOf="@id/barrier_icon_step_bottom"
            app:layout_constraintStart_toEndOf="@id/image_view_privacy"
            app:layout_constraintEnd_toStartOf="@id/image_view_category"
            app:layout_constraintTop_toTopOf="@id/barrier_icon_step_top" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />

        <!--    Step Kategori    -->
        <ImageView
            android:id="@+id/image_view_category"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_circle_step"
            android:padding="8dp"
            android:src="@drawable/ic_menu"
            app:layout_constraintEnd_toStartOf="@id/guideline_2"
            app:layout_constraintStart_toEndOf="@id/guideline_1"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/color_tint_icon" />

        <TextView
            android:id="@+id/text_view_step_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Kategori\nLaporan"
            android:textAppearance="?textAppearanceBody2"
            android:textColor="@color/color_text_step"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/guideline_2"
            app:layout_constraintStart_toEndOf="@id/guideline_1"
            app:layout_constraintTop_toBottomOf="@id/barrier_icon_step_bottom" />
        <!--    End Step Kategori    -->

        <View
            android:id="@+id/step_bar_2"
            android:layout_width="0dp"
            android:layout_height="2.5dp"
            android:layout_margin="8dp"
            android:background="@drawable/step_bar"
            app:layout_constraintBottom_toBottomOf="@id/barrier_icon_step_bottom"
            app:layout_constraintEnd_toStartOf="@id/image_view_photo"
            app:layout_constraintStart_toEndOf="@id/image_view_category"
            app:layout_constraintTop_toTopOf="@id/barrier_icon_step_top" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <!--    Step Foto & Video    -->
        <ImageView
            android:id="@+id/image_view_photo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_circle_step"
            android:padding="8dp"
            android:src="@drawable/ic_camera"
            app:layout_constraintEnd_toStartOf="@id/guideline_3"
            app:layout_constraintStart_toEndOf="@id/guideline_2"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/color_tint_icon" />

        <TextView
            android:id="@+id/text_view_step_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Photo\nVideo"
            android:textAppearance="?textAppearanceBody2"
            android:textColor="@color/color_text_step"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/guideline_3"
            app:layout_constraintStart_toEndOf="@id/guideline_2"
            app:layout_constraintTop_toBottomOf="@id/barrier_icon_step_bottom" />
        <!--    End Step Kategori    -->

        <View
            android:id="@+id/step_bar_3"
            android:layout_width="0dp"
            android:layout_height="2.5dp"
            android:layout_margin="8dp"
            android:background="@drawable/step_bar"
            app:layout_constraintBottom_toBottomOf="@id/barrier_icon_step_bottom"
            app:layout_constraintEnd_toStartOf="@id/image_view_detail"
            app:layout_constraintStart_toEndOf="@id/image_view_photo"
            app:layout_constraintTop_toTopOf="@id/barrier_icon_step_top" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />

        <!--    Step Detail    -->
        <ImageView
            android:id="@+id/image_view_detail"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_circle_step"
            android:padding="8dp"
            android:src="@drawable/ic_document"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline_3"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/color_tint_icon" />

        <TextView
            android:id="@+id/text_view_step_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Detail\nLaporan"
            android:textAppearance="?textAppearanceBody2"
            android:textColor="@color/color_text_step"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline_3"
            app:layout_constraintTop_toBottomOf="@id/barrier_icon_step_bottom" />
        <!--    End Step Kategori    -->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraint_layout_step" />

    <FrameLayout
        android:id="@+id/frame_layout_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/barrier_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider2" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:barrierDirection="top"
        app:constraint_referenced_ids="linear_layout_next, linear_layout_previous" />

    <LinearLayout
        android:id="@+id/linear_layout_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrier_button">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/bg_circle_info"
            android:padding="6dp"
            android:src="@drawable/ic_chevron_left"
            app:tint="@color/color_tint_icon" />

        <TextView
            android:id="@+id/text_view_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/sebelumnya"
            android:textAppearance="?textAppearanceBody2"
            android:textColor="@color/color_text_previous" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrier_button">

        <TextView
            android:id="@+id/text_view_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/selanjutnya"
            android:textAppearance="?textAppearanceBody2"
            android:textColor="@color/color_text_next" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/bg_circle_active"
            android:padding="6dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="@color/color_tint_icon" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>